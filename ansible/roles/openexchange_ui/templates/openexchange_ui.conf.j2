server {
	listen 80;
	listen [::]:80;

	server_name {{ openexchange_ui_domain }};

	# Redirect all HTTP requests to HTTPS with a 301 Moved Permanently response.
	include /etc/nginx/letsencrypt/*.conf;
{% if openexchange_ui_ssl_certificate.stat.exists %}
	location / {
		return 301 https://$host$request_uri;
	}
{% endif %}
}

{% if openexchange_ui_ssl_certificate.stat.exists %}
server {
	# SSL configuration
	listen 443 ssl http2;
	listen [::]:443 ssl http2;

	server_name {{ openexchange_ui_domain }};
	ssl_certificate /etc/letsencrypt/live/{{ openexchange_ui_cert_name }}/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/{{ openexchange_ui_cert_name }}/privkey.pem;

	include /etc/nginx/letsencrypt/*.conf;
	# Include specific OpenExchange UI configurations here
	# For example, proxying to the OpenExchange backend services
	location / {
		proxy_pass http://{{ openexchange_backend_ip }}:8080/; # Assuming backend runs on port 8080
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
	}
}
{% endif %}
